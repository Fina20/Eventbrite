<h2>Users#new</h2>

<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: signup_path ) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <br>
    <%= f.submit "Create user", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>